<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GlideLog.ViewModels"
             xmlns:models="clr-namespace:GlideLog.Models"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GlideLog.Views.TotalsView"
             x:DataType="vm:TotalsViewModel"
             Title="Totals">

    <Grid RowDefinitions="auto, auto, *">
        <HorizontalStackLayout HorizontalOptions="Center">
            <Border Margin="0,0,10,0">
                <HorizontalStackLayout>
                    <Label Text="Flight Count:" Margin="0,0,5,0"/>
                    <Label Text="{Binding FlightCount}"/>
                </HorizontalStackLayout>
            </Border>

            <Border>
                <HorizontalStackLayout>
                    <Label Text="Flight Hours:" Margin="0,0,5,0"/>
                    <Label Text="{Binding Hours, StringFormat='{0:D2}:'}"/>
                    <Label Text="{Binding Minutes, StringFormat='{0:D2}'}"/>
                </HorizontalStackLayout>
            </Border>
        </HorizontalStackLayout>

        <Label Text="Hours by Month" Grid.Row="1" HorizontalOptions="Center" Margin="0,10,0,0"/>

        <!--HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" Margin="0,20,0,0">
            <Border Margin="0,0,2,0">
                <Button Text="Date" Padding="0"/>
            </Border>

            <Border Margin="0,0,2,0">
                <Button Text="Site" Padding="0"/>
            </Border>

            <Border Margin="0,0,0,0">
                <Button Text="Glider" Padding="0"/>
            </Border>
        </HorizontalStackLayout-->

        <ListView ItemsSource="{Binding TotalsByMonth}" Grid.Row="2" SelectionMode="None" Margin="0,20,0,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:TotalsByMonthModel">
                    <ViewCell>
                        <Grid VerticalOptions="Center" ColumnSpacing="0" HorizontalOptions="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="54" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Date}" Grid.Column="0" Margin="0,0,0,0"/>
                            <Label Text="Flights:" Margin="0,0,0,0" Grid.Column="1"/>
                            <Label Text="{Binding TotalFlights}" Grid.Column="2"/>
                            <Label Text="Hours:" Margin="0,0,2,0" Grid.Column="3"/>
                            <Label Text="{Binding TotalHours, StringFormat='{0:D2}:'}" Grid.Column="4"/>
                            <Label Text="{Binding TotalMinutes, StringFormat='{0:D2}'}" Grid.Column="5"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>