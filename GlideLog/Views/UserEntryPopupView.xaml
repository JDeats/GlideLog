<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlideLog.Views.UserEntryPopupView"
             xmlns:vm="clr-namespace:GlideLog.ViewModels"
             x:DataType="vm:UserEntryPopupViewModel"
             Background="#212121">

    <Grid RowDefinitions="auto, auto">
        <HorizontalStackLayout Grid.Row="0" Margin="-22,0,0,0" >
            <Label Text="{Binding EntryLabel}" VerticalOptions="Center" Margin="0,0,5,0"/>
            <Entry Text="{Binding UserText}" Background="#404040" WidthRequest="210" Placeholder="{Binding PlaceholderText}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,10" Grid.Row="1">
            <Button Text="OK" Command="{Binding SaveCommand}" Margin="0,0,10,0" WidthRequest="75"/>
            <Button Text="Cancel" Command="{Binding CancelCommand}" WidthRequest="75"/>
        </HorizontalStackLayout>
    </Grid>

</ContentView>
