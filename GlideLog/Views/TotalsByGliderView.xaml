<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlideLog.Views.TotalsByGliderView"
             xmlns:vm="clr-namespace:GlideLog.ViewModels"
             xmlns:models="clr-namespace:GlideLog.Models"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="vm:TotalsViewModel">

    <ListView ItemsSource="{Binding TotalsByGlider}" SelectionMode="None" Margin="0,20,0,0">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="models:TotalsByGliderModel">
                <ViewCell>
                    <Grid VerticalOptions="Center" ColumnSpacing="0" HorizontalOptions="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="54" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding Glider}" Grid.Column="0" Margin="0,0,0,0"/>
                        <Label Text="Flights:" Margin="0,0,0,0" Grid.Column="1"/>
                        <Label Text="{Binding TotalFlights}" Grid.Column="2"/>
                        <Label Text="Hours:" Margin="0,0,2,0" Grid.Column="3"/>
                        <Label Text="{Binding TotalHours, StringFormat='{0:D2}:'}" Grid.Column="4"/>
                        <Label Text="{Binding TotalMinutes, StringFormat='{0:D2}'}" Grid.Column="5"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentView>
